@model SII.Models.Campus

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="small-8 small-offset-2 columns">
        <h4>¿Está seguro que desea eliminar el campus?</h4>
        <fieldset>
            <legend>Campus</legend>
            <div class="row">
                <div class="small-2 columns">
                    <span class="label">@Html.DisplayNameFor(model => model.Code)</span>
                </div>
                <div class="small-10 columns">
                    @Html.DisplayFor(model => model.Code)
                </div>
            </div>

            <div class="row">
                <div class="small-2 columns">
                    <span class="label">@Html.DisplayNameFor(model => model.Name)</span>
                </div>
                <div class="small-10 columns">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>

            <div class="row">
                <div class="small-2 columns">
                    <span class="label">@Html.DisplayNameFor(model => model.Details)</span>
                </div>
                <div class="small-10 columns">
                    @Html.DisplayFor(model => model.Details)
                </div>
            </div>


        </fieldset>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <ul class="button-group">
                <li><input type="submit" value="Eliminar" class="small alert button" /></li>
                <li>@Html.ActionLink("Regresar a la lista", "Index", "Campus", htmlAttributes: new { @class = "small button" })</li>
            </ul>
        }
    </div>
</div>
