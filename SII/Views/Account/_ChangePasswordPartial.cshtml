@model SII.Models.LocalPasswordModel


@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Cambiar contraseña</legend>
        <div class="row">
            <div class="small-2 columns">
                @Html.LabelFor(model => model.OldPassword, new { @class = "right inline" })
            </div>
            <div class="small-10 columns">
                @Html.EditorFor(model => model.OldPassword)
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>
        </div>
        <div class="row">
            <div class="small-2 columns">
                @Html.LabelFor(model => model.NewPassword, new { @class = "right inline" })
            </div>
            <div class="small-10 columns">
                @Html.EditorFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>
        <div class="row">
            <div class="small-2 columns">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "right inline" })
            </div>
            <div class="small-10 columns">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <div class="row">
            <div class="small-6 small-offset-1 columns">
                <input type="submit" value="Cambiar contraseña" class="button" />
            </div>
        </div>
    </fieldset>
}
